  "item": [
    {
      "name": "Change Balance (BAISHUN)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"app_id\":21397507,\n  \"user_id\":\"{user_id}\",\n  \"ss_token\":\"{ss_token}\",\n  \"currency_diff\": -100,\n  \"game_id\":1006,\n  \"room_id\":\"room_123\",\n  \"game_round_id\":\"<game_round_id>\",\n  \"order_id\":\"<unique_order_id>\",\n  \"change_time_at\":1638845715,\n  \"diff_msg\":\"bet\",\n  \"signature_nonce\":\"<nonce>\",\n  \"timestamp\":<unix_seconds>,\n  \"signature\":\"<md5_lower_hex>\"\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": { "raw": "{{URL}}/change_balance.php", "host": ["{{URL}}"], "path": ["change_balance.php"] }
      },
      "response": []
    },
